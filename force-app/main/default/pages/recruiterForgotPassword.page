<apex:page showHeader="false" standardStylesheets="false">
    <html>
        <head>
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
            <style>
                body {
                    background: radial-gradient(circle at center, #001F3F, #0D4D6B) no-repeat center center fixed;
                    background-size: cover;
                    height: 100vh;
                    margin: 0;
                    display: flex;
                    flex-direction: column;
                    align-items: center;
                    justify-content: center;
                    color: white;
                }

                .signup-container {
                    width: 30vw;
                    max-width: 400px; /* Added max-width to ensure it's not too wide */
                    height: auto;
                    text-align: center;
                    padding: 20px;
                    border-radius: 20px;
                    box-shadow: 20px 20px 60px #002633, -20px -20px 60px #0D4D6B;
                    background-color: rgba(0, 92, 123, 0.7);
                    display: flex;
                    flex-direction: column; /* Center-align vertically */
                    align-items: center;
                }

                .logo-container {
                    height: 20%;
                    align-items: center;
                    display: flex;
                    justify-content: center;
                }

                .logo {
                    max-width: 180px;
                    max-height: 113px;
                }

                .detail-container {
                    height: 75%;
                    width: 100%;
                }

                .detail-container-sub {
                    width: 100%;
                }

                .separator {
                    width: 100%;
                    border-top: 1px groove rgba(255, 255, 255, 0.2);
                    margin: 4% 0;
                }

                .separator-bottom {
                    width: 100%;
                    border-top: 1px groove rgba(255, 255, 255, 0.2);
                    margin: 4% 0;
                }

                .reset-header {
                    font-size: xx-large;
                    font-weight: bold;
                    padding-bottom: 20px;
                }

                .reset-line1 {
                    padding-bottom: 5px;
                }

                .reset-line2 {
                    padding-bottom: 20px;
                }

                .input-group {
                    margin-bottom: 15px;
                    width: 100%;
                    display: flex;
                    background: #2171733b;
                }

                .input-group input {
                    width: 100%;
                    padding: 4%;
                    height: 5%;
                    box-sizing: border-box;
                    border: none;
                    border-bottom: 2px solid transparent;
                    background-color: #2171733b;
                    color: white;
                    transition: border-bottom 0.3s, box-shadow 0.3s;
                }

                ::-webkit-input-placeholder {
                    color: #ffffff;
                    opacity: 0.8;
                }

                :-moz-placeholder {
                    color: #ffffff;
                    opacity: 0.8;
                }

                ::-moz-placeholder {
                    color: #ffffff;
                    opacity: 0.8;
                }

                :-ms-input-placeholder {
                    color: #ffffff;
                    opacity: 0.8;
                }

                ::-ms-input-placeholder {
                    color: #ffffff;
                    opacity: 0.8;
                }

                ::placeholder {
                    color: #ffffff;
                    opacity: 0.8;
                }

                .input-group input:focus {
                    box-shadow: inset 0 0 6px 0px rgba(255, 255, 255, 0.8);
                }

                .input-group input:focus-visible {
                    outline: thick;
                }

                .buttons-container {
                    text-align: center;
                    padding-top: 15px;
                    width: 100%;
                }

                .btn-cancel,
                .btn-reset {
                    width: 38% !important;
                    box-shadow: 2px 3px 15px 1px cadetblue !important;
                    border: 2px solid white !important;
                    color: black !important;
                    padding: 10px !important;
                    border-radius: 5px !important;
                    cursor: pointer !important;
                    border: aliceblue !important;
                    background-color: white !important;
                }

                .btn-cancel:hover,
                .btn-reset:hover {
                    background-color: rgba(255, 255, 255, 0.2) !important;
                }

                .copyright {
                    text-align: center;
                    height: 5%;
                    opacity: 0.8;
                    color: white;
                }
            </style>
        </head>
        <body>
            <apex:form id="resetPasswordForm" forceSSL="true">
            <div class="signup-container">
                <div class="logo-container">
                    <img class="logo" src="{!URLFOR($Resource.SkillMatch_Logo_White)}" alt="SkillMatch" />
                </div>
                <div class="detail-container">
                    <div class="detail-container-sub">
                        <div class="separator"></div>

                        <div class="reset-header">
                            Password Reset
                        </div>

                        <div class="reset-line1">
                            To reset your password, we'll need your username.
                        </div>

                        <div class="reset-line2">
                            We'll send password reset instructions to the email address associated with your account.
                        </div>

                        <div class="input-group">
                            <i class="fas fa-user" style="align-self: center;padding: 9px;"></i>
                            <apex:inputText required="true" html-placeholder="Username" id="username"/>
                        </div>

                        <div class="buttons-container">
                            <!--apex:commandButton action="{!onCancel}" styleClass="btn-cancel" value="Cancel"/-->
                            <apex:commandButton action="{!forgotPassword}" styleClass="btn-reset" value="Reset Password"/>
                        </div>
                        <div class="separator-bottom"></div>
                    </div>
                </div>
                <div class="copyright">
                    &copy; Copyright 2024, Credex Technology, All rights reserved
                </div>
            </div>
            </apex:form>
        </body>
    </html>

</apex:page>