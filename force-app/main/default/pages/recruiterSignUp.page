<apex:page showHeader="false" standardStylesheets="false" controller="recruiterSignUpController" title="Sign Up">
    <html>
        <head>
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
            <style>
                body {
                    background: radial-gradient(circle at center, #001F3F, #0D4D6B) no-repeat center center fixed;
                    background-size: cover;
                    height: 100vh;
                    margin: 0;
                    display: flex;
                    flex-direction: column;
                    align-items: center;
                    justify-content: center;
                    color: #FFFFFF;
                }

                .signup-container {
                    width: 30vw;
                    height: fit-content;
                    text-align: center;
                    padding: 20px;
                    border-radius: 20px; 
                    box-shadow: 20px 20px 60px #002633, -20px -20px 60px #0D4D6B;
                    background-color: rgba(0, 92, 123, 0.7);
                }

                .logo-container {
                    height: 20%;
                    align-items: center;
                    display: flex;
                    justify-content: center;
                }

                .logo {
                    max-width: 180px;
                    max-height: 113px;
                }

                .detail-container {
                    height: 75%;
                    width: 100%;
                }

                .detail-container-sub {
                    width: 100%;
                }

                .separator {
                    width: 100%;
                    border-top: 1px groove rgba(255, 255, 255, 0.2);
                    margin: 2% 0;
                }

                .input-group {
                    margin-bottom: 2%;
                    width: 100%;
                    display: flex;
                    background: #002633;
                }

                .input-group input {
                    width: 100%;
                    padding: 1.5%;
                    height: 4%;
                    box-sizing: border-box;
                    border: none;
                    border-bottom: 2px solid transparent;
                    background-color: #ffffff;
                    color: #000000;
                    transition: border-bottom 0.3s, box-shadow 0.3s;
                }

                ::placeholder {
                    color: #80A0A7;
                    opacity: 0.8;
                }

                .input-group input:focus {
                    box-shadow: inset 0 0 6px 0px rgba(255, 255, 255, 0.8);
                }

                .input-group input:focus-visible {
                    outline: thick;
                }

                .buttons-container {
                    display: flex;
                    justify-content: center;
                    width: 100%;
                }

                .btn-Login,
                .btn-signup {
                    width: 30% !important;
                    box-shadow: 2% 3% 15% 1% #FFD700;
                    border: 2px solid #FFD700;
                    color: #002633;
                    padding: 2%;
                    border-radius: 5px;
                    cursor: pointer;
                    background-color: #FFD700;
                    margin-top: 2%;
                }

                .btn-signup:hover {
                    background-color: #DAA520;
                }

                .copyright {
                    text-align: center;
                    height: 5%;
                    opacity: 0.8;
                    color: #FFFFFF;
                    padding: 5%;
                }
            </style>
        </head>
        <body>
            <apex:form id="signupForm" forceSSL="true">
            <div class="signup-container">
                <div class="logo-container">
                    <img class="logo" src="{!URLFOR($Resource.SkillMatch_Logo_White)}" alt="SkillMatch" />
                </div>
                <div class="detail-container">
                    <div class="detail-container-sub">
                        <div class="separator"></div>
                        <div class="input-group">
                            <i class="fas fa-user" style="align-self: center;padding: 9px;"></i>
                            <apex:inputText required="true" html-placeholder="First Name"  label="First Name"/>
                        </div>
                        <div class="input-group">
                            <i class="fas fa-user" style="align-self: center;padding: 9px;"></i>
                            <apex:inputText required="true" html-placeholder="Last Name"  label="Last Name"/>
                        </div>
                        <div class="input-group">
                            <i class="fas fa-envelope" style="align-self: center;padding: 9px;"></i>
                            <apex:inputText required="true" html-placeholder="Email"  label="{!$Label.site.email}"/>
                        </div>
                        <div class="input-group">
                            <i class="fas fa-envelope" style="align-self: center;padding: 9px;"></i>
                            <apex:inputText required="true" html-placeholder="Company Name" label="Company Name"/>
                        </div>  
                        <div class="input-group">
                            <i class="fas fa-lock" style="align-self: center;padding: 9px;"></i>
                            <apex:inputSecret html-placeholder="Password"/>
                        </div>
                        <div class="input-group">
                            <i class="fas fa-lock" style="align-self: center;padding: 9px;"></i>
                            <apex:inputSecret html-placeholder="Confirm Password"/>
                        </div>
                        <div class="buttons-container">
                            <apex:commandButton action="{!registerUser}" styleClass="btn-signup" value="Sign Up"/>
                        </div>
                        <div class="separator-bottom"></div>
                    </div>
                </div>
                <div class="copyright">
                    &copy; Copyright 2024, Credex Technology, All rights reserved
                </div>
            </div>
            </apex:form>
        </body>
    </html>

</apex:page>